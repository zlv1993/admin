<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlv.admin.mapper.PermissionMapper">
    <resultMap id="permissionRole" type="Permission">
        <id property="id" column="id" />
        <result property="pid" column="pid" />
        <result property="url" column="url" />
        <result property="path" column="path" />
        <result property="component" column="component" />
        <result property="name" column="name" />
        <result property="icon" column="icon" />
        <result property="type" column="type" />
        <result property="createTime" column="pcreateTime" />
        <result property="updateTime" column="pPupdateTime" />
        <collection property="roles"   ofType="Role">
            <id property="id" column="rid"/>
            <result property="name" column="rname" />
            <result property="desc" column="desc" />
            <result property="role" column="role" />
        </collection>
    </resultMap>

    <select id="getAll" resultMap="permissionRole">
       select  p.id, p.pid,p.url,p.path,  p.component,p.name,p.icon, p.type, p.create_time pcreateTime, p.update_time pPupdateTime,       r.id rid,r.name rname,r.desc,r.role  from sp_permission p, sp_role_permission rp,sp_role r where p.id=rp.permission_id and r.id=rp.role_id
    </select>

    <select id="getTree" resultType="PermissionVo">
       select  *  from sp_permission
    </select>
    <insert id="addPermission" parameterType="Permission" useGeneratedKeys="true"  keyColumn="id" keyProperty="id">
       insert into sp_permission (pid,url,path,component,name,icon,type,create_time) values(#{pid},#{url},#{path},#{component},#{name},#{icon},#{type},#{createTime})
    </insert>
   <delete id="deletePermission" parameterType="int">
       delete from  sp_permission  where  id=#{id}
   </delete>
</mapper>
